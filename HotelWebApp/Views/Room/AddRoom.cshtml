@model AddRoomModel

@{
ViewData["Title"] = "Добавить новую комнату";
}

<div class="container mt-5">
    <h2 class="mb-4">Добавить новую комнату</h2>

    <!-- Display Success or Error Message -->
    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
    }

    <form asp-action="AddRoom" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Room Name Field -->
        <div class="form-group">
            <label for="roomNumber" class="control-label">Номер комнаты</label>
            <input type="text" asp-for="roomNumber" class="form-control" />
            <span asp-validation-for="roomNumber" class="text-danger"></span>
        </div>

        <!-- Capacity Field -->
        <div class="form-group">
            <label for="guests" class="control-label">Вместимость</label>
            <input type="number" asp-for="guests" class="form-control" />
            <span asp-validation-for="guests" class="text-danger"></span>
        </div>

        <!-- Price Field -->
        <div class="form-group">
            <label for="cost" class="control-label">Цена</label>
            <input type="number" step="0.01" asp-for="cost" class="form-control" />
            <span asp-validation-for="cost" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="description" class="control-label">Описание</label>
            <input type="text" asp-for="description" class="form-control" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Добавить комнату</button>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
